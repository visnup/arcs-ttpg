{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "outDir": "./build",
    "useUnknownInCatchVariables": false,
    "jsx": "react",
    "jsxFactory": "jsxInTTPG",
    "jsxFragmentFactory": "jsxFrag",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
